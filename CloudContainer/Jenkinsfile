pipeline {
    agent any

    environment {
        dockerhub=credentials('dockerhub')
    }

    stages {

        stage("verify tooling") {
            steps {
                sh '''
                    docker version
                    docker info
                    python3 --version
                    pip3 --version
                '''
            }
        }

        stage("Create venv and install requirements") {
            steps {

                dir("CloudContainer") {
                    sh '''
                        python3 -m venv venv
                        source venv/bin/activate
                        pip3 install -r requirements.txt
                    '''

                    sh 'ls -l'
                    sh 'pwd'
                }
            }
        }

        stage("Run tests") {
            steps {
                sh '''
                    deactivate
                '''
            }
        }
    }
}