pipeline {
    agent any

    environment {
        dockerhub=credentials('dockerhub')
    }

    stages {

        stage("verify tooling") {
            steps {
                sh '''
                    docker version
                    docker info
                    python3 --version
                    pip3 --version
                '''
            }
        }

        stage("Run tests") {
            steps {
                dir("CloudContainer") {
                    sh '''
                        python3 -m venv venv
                        source venv/bin/activate
                        pip3 install -r requirements_test.txt
                    '''

                    sh '''
                        source venv/bin/activate
                        pytest --version
                        pytest
                    '''
                }
            }
        }
    }
}